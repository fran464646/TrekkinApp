<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title">
	<body background="http://www.kakslauttanen.fi/assets/2013/10/SUMMERAUTUMN_Patikointi_1.jpg" style="background-attachment: fixed;background-position: center; background-repeat: no-repeat; background-size: cover;">	      
	<form t:type="Form" class="form-horizontal" t:id="changePasswordForm">
	
	   <t:errors/>
	   
	   <div class="form-group">        
	        <t:label for="oldPassword" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="oldPassword" t:type="PasswordField"
				       t:validate="required" maxlength="8"/>
	        </div>
	   </div>
	   
	   <div class="form-group">        
	        <t:label for="newPassword" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="newPassword" t:type="PasswordField"
				       t:validate="required" maxlength="8"/>
	        </div>
       </div>

	   <div class="form-group">        
	        <t:label for="retypeNewPassword" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="retypeNewPassword" t:type="PasswordField"
				       t:validate="required" maxlength="8"/>
	        </div>
	    </div>
	       
	    <div class="form-group">
	    	<div class="col-md-offset-5 col-md-1">
        		<button id="button" type="submit" class="btn btn-primary">${message:submit}</button>
        	</div>
        </div>
	    
	</form>
	</body>
</html>