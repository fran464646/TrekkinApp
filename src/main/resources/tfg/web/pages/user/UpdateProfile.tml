<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title">
	<body background="http://www.kakslauttanen.fi/assets/2013/10/SUMMERAUTUMN_Patikointi_1.jpg" style="background-attachment: fixed;background-position: center; background-repeat: no-repeat; background-size: cover;">
	<form t:type="Form" class="form-horizontal" t:id="updateProfileForm">
	
	   <t:errors/>

	   <div class="form-group">        
	        <t:label for="firstName" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="firstName" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>
	   
	   <div class="form-group">        
	        <t:label for="lastName" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">    
	            <input t:id="lastName" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>
	   
	   <div class="form-group">        
	        <t:label for="email" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">    
	            <input t:id="email" t:type="TextField"
				       t:validate="required,regexp" maxlength="30" />
	        </div>
	   </div>
	    
       <div class="form-group">
	    	<div class="col-md-offset-5 col-md-1">
        		<button id="button" type="submit" class="btn btn-primary">${message:submit}</button>
        	</div>
        </div>     
	    
	</form>
	</body>
</html>